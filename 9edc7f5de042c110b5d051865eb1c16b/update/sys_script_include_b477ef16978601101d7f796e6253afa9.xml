        <description>User utilities</description>
        <name>UserUtils</name>
        <script><![CDATA[var UserUtils = Class.create();
UserUtils.prototype = Object.extendsObject(global.AbstractAjaxProcessor, {
getLanguage: function(){
	var usr = gs.getUserID();
	var lang = '';
	var usrLang = new GlideRecord('sys_user_preference');
	usrLang.addEncodedQuery('name=user.language^user='+usr);
	usrLang.query();
	if(usrLang.next()){
		lang = usrLang.getValue('value');
	}
	return lang;
},
    type: 'UserUtils'
});]]></script>
